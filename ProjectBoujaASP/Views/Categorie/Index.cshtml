@model IEnumerable<ProjectBoujaASP.Models.Categorie>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CategorieName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
               <b> @Html.DisplayFor(modelItem => item.CategorieName)</b>
            </td>
            <td>
               <a asp-action="Edit" asp-route-id="@item.CategorieId" class="btn btn-info">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.CategorieId" class="btn btn-warning">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.CategorieId" class="btn btn-danger">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
